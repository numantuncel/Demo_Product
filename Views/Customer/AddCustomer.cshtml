@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_IULayout.cshtml";
}
<style>
    .kaydet {
        background-color: paleturquoise;
        color: black;
        font-size: 15px;
        border-radius: 30px;
        font-weight: 700;
        padding: 10px 20px;
        border: none;
        transition: all 1s;
    }

        .kaydet:hover {
            background-color: palevioletred;
            color: white;
        }

</style>


<form method="post">
    @Html.Label("Müşteri Adı:")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Müşteri Şehir:")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    @Html.ValidationMessageFor(x=>x.City)
    <br />
    @Html.Label("Meslek Seçiniz:")
    @Html.DropDownListFor(x=>x.JobId,(List<SelectListItem>)ViewBag.v,new{@class ="form-control"})
     <br />
    <button class="kaydet">Kaydet</button>


</form>
