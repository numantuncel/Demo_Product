@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_IULayout.cshtml";
}
<style>
    .kaydet {
        background-color: paleturquoise;
        color: black;
        font-size: 15px;
        border-radius: 30px;
        font-weight: 700;
        padding: 10px 20px;
        border: none;
        transition: all 1s;
    }

        .kaydet:hover {
            background-color: palevioletred;
            color: white;
        }

</style>


<form method="post">
    @Html.Label("Ürün Adı:")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Ürün Fiyat:")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    @Html.ValidationMessageFor(X => X.Price)
    <br />
    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Stock)
    <br />
    <button class="kaydet">Kaydet</button>


</form>
